// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docmancer: Debug C# Project",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/docmancer/__main__.py",
            "args": [
                "--write",
                "--no-summary"
            ],
            "cwd": "${workspaceFolder}/tests/test_projects/csharp",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
            }
        },
         {
            "name": "Docmancer: Debug Python Project",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/docmancer/__main__.py",
            "args": [
                "--write"
            ],
            "cwd": "${workspaceFolder}/tests/test_projects/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
            }
        },
        {
            "name": "Debug: pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Current File (with Poetry env)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {

            }
        }
    ]
}